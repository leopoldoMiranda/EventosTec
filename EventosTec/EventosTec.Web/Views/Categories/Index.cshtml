@model IEnumerable<EventosTec.Web.Models.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

    <h3 class="text-success">Categorias</h3>

<p>
    <a asp-action="Create" class="btn btn-success btn-md">Nueva Categoría</a><!--AGREGADO-->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Eventos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
            <td>@item.Events.Count</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-block btn-md">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-block btn-md">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default btn-block btn-md">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
